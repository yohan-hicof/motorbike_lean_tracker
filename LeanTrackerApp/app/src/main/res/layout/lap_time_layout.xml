<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp">
    <TextView
        android:id="@+id/lapID"
        android:layout_width="240dp"
        android:layout_height="24dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginTop="0dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lapTime"
        android:layout_width="240dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/maxSpeed"
        android:layout_width="240dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/meanSpeed"
        android:layout_width="240dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/maxLean"
        android:layout_width="240dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imageSpeed"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/speedometer" />
    <ImageView
        android:id="@+id/imageSpeed2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="62dp"
        android:src="@drawable/speedometer" />

    <ImageView
        android:id="@+id/imageLean"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="82dp"
        android:src="@drawable/lean" />
    <ImageView
        android:id="@+id/imageTrack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/racetrack" />

</RelativeLayout>
